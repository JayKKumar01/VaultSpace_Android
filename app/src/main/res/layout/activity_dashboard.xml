<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vs_content_bg"
    android:keepScreenOn="true"
    tools:context=".activities.DashboardActivity">

    <!-- ================= Dashboard Header Card ================= -->
    <androidx.cardview.widget.CardView
        android:id="@+id/dashboardHeaderCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/vs_surface_soft"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="14dp"
            android:paddingBottom="16dp">

            <!-- ================= Brand Row ================= -->

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vaultspace"
                android:textColor="@color/vs_brand_text"
                android:textSize="15sp"
                android:textStyle="bold"
                android:letterSpacing="0.06"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â·"
                android:textSize="14sp"
                android:textColor="@color/vs_text_content"
                android:layout_marginStart="6dp"
                android:alpha="0.65"
                app:layout_constraintBaseline_toBaselineOf="@id/tvAppName"
                app:layout_constraintStart_toEndOf="@id/tvAppName" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_private_cloud_simplified"
                android:textColor="@color/vs_text_content"
                android:textSize="12sp"
                android:alpha="0.75"
                android:layout_marginStart="6dp"
                app:layout_constraintBaseline_toBaselineOf="@id/tvAppName"
                app:layout_constraintStart_toEndOf="@id/tvDot" />

            <View
                android:id="@+id/brandDivider"
                android:layout_width="32dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/vs_accent_primary"
                android:alpha="0.7"
                app:layout_constraintTop_toBottomOf="@id/tvAppName"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- ================= Profile + Storage Row ================= -->

            <com.github.jaykkumar01.vaultspace.views.creative.ProfileInfoView
                android:id="@+id/profileInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="12dp"
                app:profileName="User Name"
                app:profileEmail="user@email.com"
                app:profileImage="@drawable/ic_profile_placeholder"
                app:layout_constraintTop_toBottomOf="@id/brandDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/storageBar" />

            <com.github.jaykkumar01.vaultspace.views.creative.StorageBarView
                android:id="@+id/storageBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/profileInfo"
                app:layout_constraintBottom_toBottomOf="@id/profileInfo"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <!-- ================= Middle Content Card ================= -->
    <androidx.cardview.widget.CardView
        android:id="@+id/middleContentCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/vs_surface_soft"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        android:layout_marginHorizontal="9dp"
        app:layout_constraintTop_toBottomOf="@id/dashboardHeaderCard"
        app:layout_constraintBottom_toTopOf="@id/bottomActionBarCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- ================= Segmented Control ================= -->

            <LinearLayout
                android:id="@+id/segmentControl"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_segment_container"
                android:padding="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/segmentAlbums"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="16dp"
                    android:gravity="center"
                    android:text="Albums"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/segment_text_color"
                    android:background="@drawable/bg_segment_item"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/segmentFiles"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="16dp"
                    android:gravity="center"
                    android:text="Files"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/segment_text_color"
                    android:background="@drawable/bg_segment_item"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- ================= Content Container ================= -->

            <FrameLayout
                android:id="@+id/contentContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/segmentControl"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Albums container (default visible) -->
                <FrameLayout
                    android:id="@+id/albumsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Folders container -->
                <FrameLayout
                    android:id="@+id/filesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>









    <!-- ================= Bottom Action Bar ================= -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomActionBarCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/vs_surface_soft"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <!-- Expand Vault Button -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnExpandVault"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_expand_vault_button"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:elevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnLogout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="12dp">

                <!-- Plus Icon -->
                <ImageView
                    android:id="@+id/ivExpandVaultIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_add"
                    android:contentDescription="Add account"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- Text Container -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/expandVaultTextContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toEndOf="@id/ivExpandVaultIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tvExpandVaultTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expand Vault"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/vs_brand_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tvExpandVaultDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add a trusted account to get more space"
                        android:textSize="11sp"
                        android:textColor="@color/vs_text_content"
                        android:alpha="0.75"
                        android:layout_marginTop="2dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvExpandVaultTitle"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnLogout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_ripple"
                android:src="@drawable/ic_logout"
                android:contentDescription="Logout"
                android:scaleType="center"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>





        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
