<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vs_content_bg"
    android:keepScreenOn="true"
    tools:context=".dashboard.DashboardActivity">

    <!-- ================= Card Surface ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dashboardSurface"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/vs_surface_soft"
        android:padding="24dp"
        android:elevation="6dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Label -->
        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primary Vault Account"
            android:textSize="12sp"
            android:textColor="@color/vs_accent_soft"
            android:letterSpacing="0.05"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- User Email -->
        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@email.com"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/vs_text_header"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="32dp"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/vs_accent_primary"
            app:layout_constraintTop_toBottomOf="@id/tvUserEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Add Trusted Account -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddTrustedAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add Trusted Account"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="@color/vs_brand_text"
            android:backgroundTint="@color/vs_content_bg"
            android:padding="14dp"
            android:elevation="2dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Logout Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="@color/vs_brand_text"
            android:backgroundTint="@color/vs_content_bg"
            android:padding="14dp"
            android:elevation="2dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnAddTrustedAccount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
