<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- ================= LEFT : Upload Info ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/uploadInfoLeft"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/uploadCancelContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Line 1 -->
        <TextView
            android:id="@+id/tvUploadMediaInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 photos · 2 videos"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/vs_text_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/ivUploadWarning"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            android:src="@drawable/ic_warning"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvFailedCount"
            app:layout_constraintBottom_toBottomOf="@id/tvUploadMediaInfo"
            android:layout_marginEnd="6dp"/>

        <TextView
            android:id="@+id/tvFailedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/vs_warning"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tvUploadMediaInfo"
            android:layout_marginEnd="4dp"/>

        <!-- Line 2 -->
        <FrameLayout
            android:id="@+id/uploadProgressBar"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="6dp"
            android:background="@color/vs_toggle_off"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUploadMediaInfo">

            <View
                android:id="@+id/uploadProgressFill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/vs_accent_primary"/>
        </FrameLayout>

        <!-- Line 3 -->
        <TextView
            android:id="@+id/tvUploadingState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uploading…"
            android:textSize="11sp"
            android:textColor="@color/vs_text_content"
            android:alpha="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/uploadProgressBar"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvUploadRatio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 / 5"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/vs_brand_text"
            app:layout_constraintStart_toEndOf="@id/tvUploadingState"
            app:layout_constraintBaseline_toBaselineOf="@id/tvUploadingState"
            android:layout_marginStart="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================= RIGHT : Cancel ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/uploadCancelContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvCancelUpload"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="Cancel"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/vs_brand_text"
            android:gravity="center"
            android:background="@drawable/bg_cancel_soft"
            android:clickable="true"
            android:focusable="true"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
