<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    android:orientation="vertical"
    android:background="@drawable/bg_setup_row"
    android:elevation="2dp"
    android:padding="14dp">

    <!-- Email -->
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/vs_text_header"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- Status -->
    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="12.5sp"
        android:textColor="@color/vs_text_content"/>

    <!-- Actions -->
    <LinearLayout
        android:id="@+id/actionsRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrimaryAction"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:textSize="12.5sp"
            android:textColor="@color/vs_accent_primary"
            app:strokeColor="@color/vs_accent_primary"
            app:strokeWidth="1dp"
            app:rippleColor="@color/vs_ripple_primary"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:visibility="gone"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSecondaryAction"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:textSize="12.5sp"
            android:textColor="@color/vs_text_content"
            app:strokeColor="@color/vs_toggle_off"
            app:strokeWidth="1dp"
            app:rippleColor="@color/vs_ripple_neutral"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
