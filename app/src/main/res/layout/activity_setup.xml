<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vs_content_bg"
    tools:context=".activities.SetupActivity">

    <!-- ================= Header Card ================= -->

    <androidx.cardview.widget.CardView
        android:id="@+id/setupHeaderCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/vs_surface_soft"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="14dp"
            android:paddingBottom="16dp">

            <!-- ================= Brand Row (UNCHANGED) ================= -->

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vaultspace"
                android:textColor="@color/vs_brand_text"
                android:textSize="15sp"
                android:textStyle="bold"
                android:letterSpacing="0.06"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="·"
                android:textSize="14sp"
                android:textColor="@color/vs_text_content"
                android:layout_marginStart="6dp"
                android:alpha="0.65"
                app:layout_constraintBaseline_toBaselineOf="@id/tvAppName"
                app:layout_constraintStart_toEndOf="@id/tvAppName"/>

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_private_cloud_simplified"
                android:textColor="@color/vs_text_content"
                android:textSize="12sp"
                android:alpha="0.75"
                android:layout_marginStart="6dp"
                app:layout_constraintBaseline_toBaselineOf="@id/tvAppName"
                app:layout_constraintStart_toEndOf="@id/tvDot"/>

            <View
                android:id="@+id/brandDivider"
                android:layout_width="32dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/vs_accent_primary"
                android:alpha="0.7"
                app:layout_constraintTop_toBottomOf="@id/tvAppName"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- ================= Setup Context Row (FIXED) ================= -->

            <LinearLayout
                android:id="@+id/setupContextRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/brandDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Back Button -->
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:padding="2dp"/>

                <!-- Title + Description -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvSetupTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Account setup"
                        android:textColor="@color/vs_text_console"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tvSetupDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Review trusted account status"
                        android:textColor="@color/vs_text_content"
                        android:textSize="12sp"
                        android:alpha="0.8"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

                <!-- Philosophy -->
                <TextView
                    android:id="@+id/tvPhilosophy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review · Decide"
                    android:textColor="@color/vs_brand_text"
                    android:textSize="11sp"
                    android:alpha="0.8"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- ================= Setup List ================= -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/setupList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/setupHeaderCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
