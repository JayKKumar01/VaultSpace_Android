<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vs_content_bg"
    tools:context=".activities.AlbumActivity">

    <!-- ================= Header Card ================= -->
    <androidx.cardview.widget.CardView
        android:id="@+id/albumHeaderCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/vs_surface_soft"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="14dp"
            android:paddingBottom="16dp">

            <!-- ================= Branding ================= -->

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vaultspace"
                android:textColor="@color/vs_brand_text"
                android:textSize="15sp"
                android:textStyle="bold"
                android:letterSpacing="0.06"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="·"
                android:textSize="14sp"
                android:textColor="@color/vs_text_content"
                android:layout_marginStart="6dp"
                android:alpha="0.65"
                app:layout_constraintBaseline_toBaselineOf="@id/tvAppName"
                app:layout_constraintStart_toEndOf="@id/tvAppName" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_private_cloud_simplified"
                android:textColor="@color/vs_text_content"
                android:textSize="12sp"
                android:alpha="0.75"
                android:layout_marginStart="6dp"
                app:layout_constraintBaseline_toBaselineOf="@id/tvAppName"
                app:layout_constraintStart_toEndOf="@id/tvDot" />

            <View
                android:id="@+id/brandDivider"
                android:layout_width="32dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/vs_accent_primary"
                android:alpha="0.7"
                app:layout_constraintTop_toBottomOf="@id/tvAppName"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- ================= Album Context ================= -->

            <!-- Album Details Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/albumDetailsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/brandDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/albumLeft"
                    app:layout_constraintWidth_percent=".55"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <!-- Back Button -->
                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1"
                        android:src="@drawable/ic_arrow_back"
                        android:contentDescription="Back"
                        android:padding="2dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btnBack"
                        app:layout_constraintEnd_toEndOf="parent">
                        <!-- Album Title -->
                        <TextView
                            android:id="@+id/tvAlbumName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Album Name"
                            android:textColor="@color/vs_text_console"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/albumMetaInfo"
                            app:layout_constraintEnd_toEndOf="parent" />
                        <com.github.jaykkumar01.vaultspace.views.creative.AlbumMetaInfoView
                            android:id="@+id/albumMetaInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/albumRight"
                    app:layout_constraintStart_toEndOf="@id/albumLeft"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <!-- Right: Philosophy -->
                    <TextView
                        android:id="@+id/tvPhilosophy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="No limits · Just memories"
                        android:textColor="@color/vs_brand_text"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>




                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>










        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



    <!-- ================= Album Content Container ================= -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="9dp"
        app:layout_constraintTop_toBottomOf="@id/albumHeaderCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/stateContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <!-- ================= Upload Status Card ================= -->
    <com.github.jaykkumar01.vaultspace.views.creative.UploadStatusView
        android:id="@+id/uploadStatusView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toTopOf="@id/albumHeaderCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
