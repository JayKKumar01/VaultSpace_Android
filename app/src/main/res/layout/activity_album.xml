<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vs_content_bg"
    tools:context=".activities.AlbumActivity">

    <!-- ================= Header Card (Branding Only) ================= -->
    <androidx.cardview.widget.CardView
        android:id="@+id/albumHeaderCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/vs_surface_soft"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="14dp"
            android:paddingBottom="16dp">

            <!-- App Name -->
            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vaultspace"
                android:textColor="@color/vs_brand_text"
                android:textSize="15sp"
                android:textStyle="bold"
                android:letterSpacing="0.06"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Dot -->
            <TextView
                android:id="@+id/tvDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â·"
                android:textSize="14sp"
                android:textColor="@color/vs_text_content"
                android:layout_marginStart="6dp"
                android:alpha="0.65"
                app:layout_constraintBaseline_toBaselineOf="@id/tvAppName"
                app:layout_constraintStart_toEndOf="@id/tvAppName" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_private_cloud_simplified"
                android:textColor="@color/vs_text_content"
                android:textSize="12sp"
                android:alpha="0.75"
                android:layout_marginStart="6dp"
                app:layout_constraintBaseline_toBaselineOf="@id/tvAppName"
                app:layout_constraintStart_toEndOf="@id/tvDot" />

            <!-- Accent Divider -->
            <View
                android:id="@+id/brandDivider"
                android:layout_width="32dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/vs_accent_primary"
                android:alpha="0.7"
                app:layout_constraintTop_toBottomOf="@id/tvAppName"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- ================= Album Content Container ================= -->
    <FrameLayout
        android:id="@+id/albumContentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="9dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/albumHeaderCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
