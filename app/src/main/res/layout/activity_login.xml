<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vs_content_bg"
    tools:context=".auth.LoginActivity">

    <!-- ================= Top Spacing ================= -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuide"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- ================= Branding + Login Surface ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loginSurface"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/vs_header_bg"
        android:paddingTop="36dp"
        android:paddingBottom="32dp"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:elevation="6dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/topGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vaultspace"
            android:textColor="@color/vs_brand_text"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Subtle brand underline -->
        <View
            android:id="@+id/brandUnderline"
            android:layout_width="28dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/vs_accent_primary"
            android:alpha="0.8"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_private_cloud_simplified"
            android:textColor="@color/vs_text_content"
            android:textSize="13sp"
            android:alpha="0.85"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/brandUnderline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Login Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoogleLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/continue_with_google"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="@color/vs_brand_text"
            android:backgroundTint="@color/vs_surface_soft"
            android:padding="14dp"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================= Feature Surface (UNCHANGED â€“ already good) ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/featureSurface"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/vs_surface_soft"
        android:padding="20dp"
        android:elevation="2dp"
        android:layout_marginTop="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/loginSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvFeatureTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_vaultspace_gives_you"
            android:textColor="@color/vs_accent_soft"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/feature1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unlimited_photos_videos_files"
            android:textColor="@color/vs_text_content"
            android:textSize="13sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvFeatureTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/feature2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_data_stays_in_your_own_google_drive"
            android:textColor="@color/vs_text_content"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/feature1"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/feature3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/albums_without_storage_limits"
            android:textColor="@color/vs_text_content"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/feature2"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/vs_accent_primary"
            android:alpha="0.75"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================= Footer ================= -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/secure_private_yours"
        android:textColor="@color/vs_text_content"
        android:textSize="11sp"
        android:alpha="0.45"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
