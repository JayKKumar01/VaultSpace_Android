<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Centered content group -->

    <LinearLayout
        android:id="@+id/emptyContentGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivEmptyIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:alpha="0.85" />

        <TextView
            android:id="@+id/tvEmptyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/vs_text_header" />

        <TextView
            android:id="@+id/tvEmptySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="13sp"
            android:textColor="@color/vs_text_content"
            android:alpha="0.8" />

        <!-- CTA container -->
        <LinearLayout
            android:id="@+id/ctaContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <!-- Primary CTA -->
            <Button
                android:id="@+id/btnPrimaryAction"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="160dp"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:textStyle="bold"
                android:backgroundTint="@color/vs_accent_primary"
                android:textColor="@color/vs_console_bg" />

            <!-- Secondary CTA (Files only) -->
            <Button
                android:id="@+id/btnSecondaryAction"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="160dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="13sp"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@color/vs_text_content"
                android:visibility="gone" />






        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
